<!-- views/cars_list.ejs -->
<!-- RECEIVES: cars [an array of car objects] + flashMessage [string, the error message] -->
<%- include("partial_headers.ejs"); %>

<h1>List of Jewels</h1>
<% if (flashMessage) { %>
    <p style='color:red'><%= flashMessage %></p>
<% } %>

<p><a href='/Jewels/edit/0'>Add a new jewel</a></p>

<table class="table table-striped table-bordered table-hover">
    <tr>
        <td>Model</td>
        <td>Price</td>
        <td>Size</td>
        <td>Category</td>
        <td>Stock</td>
        <td>Edit</td>
    </tr>
    
<% for (var c of Jewels) { %>
    <tr>
        <td><%= c.Jewel_ID %></td>
        <td><%= c.Jewel_name %></td>
        <td><%= c.price %></td>
        <td><a href='/Jewels/show/<%= c.Jewel_ID %>'>Show</a></td>
        <td><a href='/Jewels/edit/<%= c.Jewel_ID %>'>Edit</a></td>
        <!-- <td><a href='/jewels/del/<%= c.Jewel_ID %>'>Delete</a></td> -->
    </tr>
<% } %>
</table>
</body>
</html>
